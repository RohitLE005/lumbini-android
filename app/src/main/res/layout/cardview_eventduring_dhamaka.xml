<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_marginBottom="@dimen/card_spacing"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/card_shadow"
        android:background="@color/light_gray"/>


    <RelativeLayout
        android:id="@+id/cardPreEventParentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- This is for Image -->
        <ImageView
            android:id="@+id/duringEventLiveAnimation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <com.phoenixmarketcity.android.phoenix.views.PhoenixTextView
            android:id="@+id/duringEventLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:background="@color/ColorButtonBackground"
            android:textColor="@android:color/white"
            style="@style/LiveEventStyle"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--  During Event Details Program Dhamaka Text -->
        <com.phoenixmarketcity.android.phoenix.views.PhoenixTextView
            android:id="@+id/duringEventDhamakaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/deepGray"
            style="@style/EventTitleText"/>

        <!--  During Event Details for Program Text Status  -->
        <com.phoenixmarketcity.android.phoenix.views.PhoenixTextView
            android:id="@+id/duringEventDhamakaLiveNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/Margin_Top"
            android:textColor="@color/ColorLiveNowText"
            style="@style/EventDateTime"/>

        <!--  During Event Details for short description Text -->
        <com.phoenixmarketcity.android.phoenix.views.PhoenixTextView
            android:id="@+id/duringEventDhamakaShortDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/ColorTopTitle"
            style="@style/EventShortText"/>

        <!--  During Event Details Performer Text -->
        <com.phoenixmarketcity.android.phoenix.views.PhoenixTextView
            android:id="@+id/duringEventPerform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/ColorTopTitle"
            style="@style/performText"/>

        <!--  During Event Details Artist Name -->
        <com.phoenixmarketcity.android.phoenix.views.PhoenixTextView
            android:id="@+id/duringEventArtistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:layout_marginBottom="@dimen/Margin_Bottom"
            android:textColor="@color/ColorEventName"
            style="@style/EventPerformerNameStyle"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/card_shadow"
        android:background="@color/light_gray"/>

</LinearLayout>
