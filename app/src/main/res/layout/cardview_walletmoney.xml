<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/walletmoneycard"
        style="@style/parentwalletmoneycard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.phoenixmarketcity.android.phoenix.views.PhoenixTextView
            style="@style/walletmoneycardtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your Phoniex Money" />

        <LinearLayout
            style="@style/cardpaddings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:src="@drawable/icn_ruppee" />

            <com.phoenixmarketcity.android.phoenix.views.PhoenixTextView
                style="@style/walletmoneytext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text="1400" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>