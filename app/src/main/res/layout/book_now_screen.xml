<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ColorPrimary"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bsl_title"
            style="@style/BS_Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            style="@style/Layout_Margin_Left_Right">

            <TextView
                android:id="@+id/bs_date"
                style="@style/BS_Date_Time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:singleLine="true" />

            <TextView
                android:id="@+id/bs_time"
                style="@style/BS_Date_Time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3" />

        <LinearLayout
            style="@style/Layout_Margin_Left_Right"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/bs_class"
                style="@style/BS_Class_Price_Qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="Class" />

            <TextView
                android:id="@+id/bs_class_price"
                style="@style/BS_Class_Price_Qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="Price" />

            <TextView
                android:id="@+id/bs_quantity"
                style="@style/BS_Class_Price_Qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:gravity="center"
                android:text="QTY" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#d3d3d3" />

        <LinearLayout
            style="@style/Layout_Margin_Left_Right"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/bs_tickettype_1"
                style="@style/BS_Ticket_price_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"/>

            <TextView
                android:id="@+id/bs_tickettype_1_price"
                style="@style/BS_Ticket_price_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/bs_tickettype_1_qty_dec"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="0.10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus"/>
            </LinearLayout>

            <TextView
                android:id="@+id/bs_tickettype_1_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="0"
                android:background="@drawable/text_box_bg"
                style="@style/BS_Ticket_price_qty"/>
            <LinearLayout
                android:id="@+id/bs_tickettype_1_qty_inc"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="0.10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.60dp"
            android:background="#d3d3d3" />
        <LinearLayout
            style="@style/Layout_Margin_Left_Right"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/bs_tickettype_2"
                style="@style/BS_Ticket_price_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"/>

            <TextView
                android:id="@+id/bs_tickettype_2_price"
                style="@style/BS_Ticket_price_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center" />
            <LinearLayout
                android:id="@+id/bs_tickettype_2_qty_dec"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="0.10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus"/>
            </LinearLayout>

            <TextView
                android:id="@+id/bs_tickettype_2_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="0"
                android:background="@drawable/text_box_bg"
                style="@style/BS_Ticket_price_qty"/>

            <LinearLayout
                android:id="@+id/bs_tickettype_2_qty_inc"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="0.10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.60dp"
            android:background="#d3d3d3" />
        <LinearLayout
            style="@style/Layout_Margin_Left_Right"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/bs_tickettype_3"
                style="@style/BS_Ticket_price_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4" />

            <TextView
                android:id="@+id/bs_tickettype_3_price"
                style="@style/BS_Ticket_price_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center" />
            <LinearLayout
                android:id="@+id/bs_tickettype_3_qty_dec"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="0.10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus"/>
            </LinearLayout>
            <TextView
                android:id="@+id/bs_tickettype_3_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="0"
                android:background="@drawable/text_box_bg"
                style="@style/BS_Ticket_price_qty"/>

            <LinearLayout
                android:id="@+id/bs_tickettype_3_qty_inc"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="0.10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"/>
        </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.60dp"
            android:background="#d3d3d3" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.60dp"
            android:background="#d3d3d3" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#d3d3d3" />

        <LinearLayout
            style="@style/Layout_Margin_Left_Right"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/bs_total"
                style="@style/BS_Class_Price_Qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:text="Total" />

            <TextView
                android:id="@+id/bs_total_price"
                style="@style/BS_Class_Price_Qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/bs_total_qty"
                style="@style/BS_Class_Price_Qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.60dp"
            android:background="#d3d3d3" />

        <Button
            android:id="@+id/BS_Button"
            style="@style/BS_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="proceed to payment" />
    </LinearLayout>
</ScrollView>